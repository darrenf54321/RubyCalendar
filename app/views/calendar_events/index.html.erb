<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4">
      <h1>Calendar Events</h1>
      <div class="table=responsive">
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <th>Details</th>
              <th>Date</th>
              <th>Completed</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @calendar_events.each do |calendar_event| %>
              <tr>
                <td><%= calendar_event.details %></td>
                <td><%= calendar_event.start_time%></td>
                <td><%= calendar_event.calendar_completed %></td>
                <td><%= link_to 'Show', calendar_event %></td>
                <td><%= link_to 'Edit', edit_calendar_event_path(calendar_event) %></td>
                <td><%= link_to 'Destroy', calendar_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="col-lg-4"></div>
  </div>
</div>
